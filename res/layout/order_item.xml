<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号：021311242432532"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:padding="3dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="套餐名称：等"
                android:textColor="@android:color/black"
                android:padding="3dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥：345"
                android:textColor="@android:color/black"
                android:padding="3dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/service_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务时间：2015-5-6 12:20"
                android:textColor="@android:color/black"
                android:padding="3dp"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_yellow_bg"
            android:padding="5dp"
            android:text="订单详情"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="15dp"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10px"
        android:background="@color/light_gray" />
 
    <com.like.customeview.SelectedLinearLayout
        android:id="@+id/status_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/order_dot_selector" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/complete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务完成"
                android:textColor="@color/order_text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="2015-7-01 11:01"
                android:textColor="@color/order_text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </com.like.customeview.SelectedLinearLayout>

    <!-- 等待厨师上门 -->

    <com.like.customeview.SelectedLinearLayout
        android:id="@+id/status_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:background="@drawable/grey_dot" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="等待厨师上门"
                android:textColor="@color/light_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="2015-7-01 11:01"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </com.like.customeview.SelectedLinearLayout>

    <!-- 确认订单 -->

    <com.like.customeview.SelectedLinearLayout
        android:id="@+id/status_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:background="@drawable/grey_dot" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="确认订单 "
                android:textColor="@color/light_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="2015-7-01 11:01"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </com.like.customeview.SelectedLinearLayout>

    <!-- 等待客户去人 -->

    <com.like.customeview.SelectedLinearLayout
        android:id="@+id/status_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:background="@drawable/grey_dot" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="等待客户确认"
                android:textColor="@color/light_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="2015-7-01 11:01"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </com.like.customeview.SelectedLinearLayout>

    <!-- 订单已经支付 -->

    <com.like.customeview.SelectedLinearLayout
        android:id="@+id/status_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:background="@drawable/order_dot_selector" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单已经支付"
                android:textColor="@color/light_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="2015-7-01 11:01"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </com.like.customeview.SelectedLinearLayout>

    <!-- 订单已经提交 -->

    <com.like.customeview.SelectedLinearLayout
        android:id="@+id/status_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:background="@drawable/grey_dot" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单已经提交"
                android:textColor="@color/light_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="2015-7-01 11:01"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />
        </RelativeLayout>
    </com.like.customeview.SelectedLinearLayout>

</LinearLayout>