<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#C30D22" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="看看大厨师"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="8dip"
                android:layout_height="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/back" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:paddingTop="10dip" >

            <com.like.customeview.RoundImageView
                android:id="@+id/dc_ico"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="16dp"
                android:paddingLeft="16dip" >

                <TextView
                    android:id="@+id/txt_dc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/taocan_xx_sel" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_marginLeft="2dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/taocan_xx_sel" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_marginLeft="2dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/taocan_xx_sel" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_marginLeft="2dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/taocan_xx" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_marginLeft="2dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/taocan_xx" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="擅长菜"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/good_at_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/taocan_ync"
                        android:paddingBottom="2dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2dip"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/good_at_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/taocan_cc"
                        android:paddingBottom="2dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2dip"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已服务"
                        android:textColor="#bbbbbb"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_service_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#bf4722"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家"
                        android:textColor="#bbbbbb"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:paddingTop="2dip"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:onClick="collect"
                    android:src="@drawable/taocan_zan" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#bbbbbb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:layout_width="8dip"
                android:layout_height="13dip"
                android:scaleType="fitXY"
                android:src="@drawable/dc_jiantou_left" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/dc_img_01" />

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/dc_img_02" />

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/dc_img_03" />

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/dc_img_04" />

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/dc_img_05" />
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:layout_width="8dip"
                android:layout_height="13dip"
                android:scaleType="fitXY"
                android:src="@drawable/dc_jiantou_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#bbbbbb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务评价"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(88)"
                android:textColor="#bf4722"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#bbbbbb" />
        
        <com.like.customeview.pulldown.PullToRefreshListView
            android:id="@+id/dc_comment_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#bbbbbb"
            android:dividerHeight="1dp"/>
    </LinearLayout>

</LinearLayout>