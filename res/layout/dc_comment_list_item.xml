<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip" >

    <com.like.customeview.RoundImageView
        android:id="@+id/header"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:scaleType="fitXY"
        android:src="@drawable/dc_face_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dip" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="annettahjj"
            android:textColor="#646464"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/taocan_xx_sel" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginLeft="2dip"
                android:scaleType="fitXY"
                android:src="@drawable/taocan_xx_sel" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginLeft="2dip"
                android:scaleType="fitXY"
                android:src="@drawable/taocan_xx_sel" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginLeft="2dip"
                android:scaleType="fitXY"
                android:src="@drawable/taocan_xx" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginLeft="2dip"
                android:scaleType="fitXY"
                android:src="@drawable/taocan_xx" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dp"
                android:text="2015-06-21"
                android:textColor="#bbbbbb"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:text="在小区门口怪外的店铺，很小但是很温馨的赶紧，里面都是卖美食的..."
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:scaleType="fitXY"
                android:src="@drawable/dc_img_06" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/dc_img_07" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/dc_img_08" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>