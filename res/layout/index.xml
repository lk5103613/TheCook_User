<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/tab1"
            android:background="@drawable/tab_bg_color"
            android:clickable="true"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="fitXY"
                android:src="@drawable/tab_home_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/tab_txt_color"
                android:textSize="10sp"
                android:text="首页"
                android:layout_marginTop="2dip"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab2"
            android:background="@drawable/tab_bg_color"
            android:clickable="true"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="23dip"
                android:layout_height="20dip"
                android:scaleType="fitXY"
                android:src="@drawable/tab_menu_btn"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/tab_txt_color"
                android:textSize="10sp"
                android:text="菜单"
                android:layout_marginTop="2dip"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab3"
            android:background="@drawable/tab_bg_color"
            android:clickable="true"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="23dip"
                android:layout_height="20dip"
                android:scaleType="fitXY"
                android:src="@drawable/tab_car_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/tab_txt_color"
                android:textSize="10sp"
                android:text="车"
                android:layout_marginTop="2dip"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab4"
            android:background="@drawable/tab_bg_color"
            android:clickable="true"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="fitXY"
                android:src="@drawable/tab_order_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/tab_txt_color"
                android:textSize="10sp"
                android:text="订单"
                android:layout_marginTop="2dip"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab5"
            android:background="@drawable/tab_bg_color"
            android:clickable="true"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="fitXY"
                android:src="@drawable/tab_my_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/tab_txt_color"
                android:textSize="10sp"
                android:text="我的"
                android:layout_marginTop="2dip"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>