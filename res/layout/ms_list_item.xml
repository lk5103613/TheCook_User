<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/meishi_img_01" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/pack_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美味仙贝套餐"
            android:textColor="#5c6f98"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/sold_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pack_name"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:textColor="#757575"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/sold_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="880"
                android:textColor="#f75929"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="份"
                android:textColor="#757575"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_below="@id/sold_container"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅售"
                android:textColor="#757575"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#f75929"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/price_container"
            android:background="@drawable/pre_book_normal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥688"
                android:textColor="@color/primary_red_color"
                android:layout_marginRight="7dp"
                android:textSize="10dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:background="@color/primary_red_color" />
            
            <ImageView android:layout_width="18dp"
                android:layout_height="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/pre_book_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即预定"
                android:textColor="@color/primary_red_color"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#eae8e8" />

</LinearLayout>